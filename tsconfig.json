{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "sourceMap": true,
        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,     
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@database": ["app/database/"],
            "@plugin": ["app/plugin/"],
            "@router": ["app/router/"],
            "@server": ["app/server/"],
            "@config": ["config/"],
            "@database/*": ["app/database/*"],
            "@plugin/*": ["app/plugin/*"],
            "@router/*": ["app/router/*"],
            "@server/*": ["app/server/*"],
            "@config/*": ["config/*"]
        }
    },
    "files": [
        "static.d.ts",
    ],
    "include": [
        "app/*",
        "config/*",
        "package.json",
        "tsconfig.json", 
        "static.d.ts",
        "ecosystem.config.js"
    ],
    "exclude": [
        "node_modules/*",
        "dist/*",
        "test/*",
        "logs",
        "**/*.spec.ts",
        "**/*.spec.js",
    ]
}