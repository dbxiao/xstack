{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": true,
        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,     
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@database": ["app/database/"],
            "@router": ["app/router/"],
            "@server": ["app/server/"],
            "@config": ["config/"],
            "@widget": ["app/widget/"],
            "@database/*": ["app/database/*"],
            "@router/*": ["app/router/*"],
            "@server/*": ["app/server/*"],
            "@config/*": ["config/*"],
            "@widget/*": ["app/widget/*"]
        }
    },
    "files": [
        "static.d.ts"
    ],
    "include": [
        "app/**/*",
        "config/**/*",
        "static.d.ts"
    ],
    "exclude": [
        "node_modules/*",
        "dist/*",
        "test/*",
        "logs",
        "**/*.spec.ts",
        "**/*.spec.js"
    ]
}